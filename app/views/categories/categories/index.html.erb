<%= provide(:title, "Categories") %>

<div class="post-container">

  <div class="title3 center">
    Categories
  </div>

  <% @categories.each do |category| %>

    <div class="pb3"></div>
    <div class="center">
      <%= link_to category_path(category) do %>
        <div class="title2 half-container-max-title">
          <%= category.title %>
        </div>
        <div class="pb1"></div>
        <div class="darkgrey">
          <%= pluralize(category.posts.count, "post") %>
        </div>
      <% end %>
    </div>

  <% end %>

</div>