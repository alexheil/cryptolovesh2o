<div class="ph3">
  <div class="pb3"></div>
  <div class="mini-title center bold pb1">
     Get more tips on <%= @post.category.title %> for free by entering your email below.
  </div>
  <%= spacing_static('b', '1') %>
  <%= form_for(@global_email, url: emails_path, remote: true) do |f| %>
    <span class="email_errors"><%= render 'partials/errors/email_errors' %></span>
    <div class="flex">
      <div class="two3rd-container">
        <%= f.text_field :email, placeholder: 'Your email goes here...', class: "text-field" %>
      </div>
      <div class="one3rd-container">
        <%= f.submit "Get tips!", data: { disable_with: 'Thank you...' }, class: "secondary-button" %>
      </div>
    </div>
  <% end %>
  <div class="pb3"></div>
</div>