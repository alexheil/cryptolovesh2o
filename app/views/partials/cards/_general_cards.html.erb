  <meta name="twitter:image" content="<%= asset_url('ninth-digital-word-with-logo.png') %>" />
  <meta name="twitter:url" content="<%= root_url %>" />
  <meta name="twitter:site" content="@cryptolovesh2o" />
  <meta name="twitter:creator" content="@cryptolovesh2o" />
