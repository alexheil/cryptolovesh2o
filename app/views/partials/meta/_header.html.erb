  <div class="nd-header-line-height">
    <div class="flex">

      <div class="nd-title-container">
        <div class="flex">
          <div class="nd-header-logo-container">
            <%= link_to(root_url) do %>
              <div class="nd-header-logo">
                <%= image_tag("ninth-digital-logo.png", alt: "cryptolovesh2o Logo") %>
              </div>
            <% end %>
          </div>

          <div class="nd-header-title-container">
